<Window x:Class="NationalChampionship.WpfClient.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NationalChampionship.WpfClient"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="Images/Background.jpg"></ImageBrush>
    </Window.Background>
    <StackPanel>
        <Button Content="REGISTRATION" Margin="10" Click="RegisterButtonClick" Background="DarkOliveGreen" Foreground="White" Height="30"/>
        <Label Content="Username" Background="OliveDrab" Foreground="White" Margin="10" />
        <TextBox x:Name="username" Margin="10" Height="25" />
        <Label Content="Password" Background="OliveDrab" Foreground="White" Margin="10" />
        <PasswordBox x:Name="password" Margin="10" Height="25" />
        <Button Content="LOGIN" Margin="10" Click="LoginButtonClick" Background="DarkOliveGreen" Foreground="White" Height="30"/>
    </StackPanel>
</Window>
